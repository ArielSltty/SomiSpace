{
  "name": "SomiSpace",
  "version": "1.0.0",
  "description": "Wallet-to-Wallet Messaging + Token Transfer on Somnia",
  "main": "index.js",
  "scripts": {
    "contracts:compile": "cd packages/contracts && pnpm compile",
    "contracts:deploy": "cd packages/contracts && pnpm deploy",
